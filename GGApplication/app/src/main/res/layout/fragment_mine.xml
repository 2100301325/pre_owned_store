<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:ignore="ExtraText">
    <!-- 上部分，占2/9比例 -->
    <LinearLayout
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        android:layout_weight="1.5"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="344dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- 左侧的 ImageView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/toux" />
                </androidx.cardview.widget.CardView>

                <!-- 右侧的垂直布局 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <!-- 上面的文字 -->
                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称："
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <!-- 下面的文字 -->
                    <TextView
                        android:id="@+id/my_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="爱睡觉的一个人"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 上部分内容布局 -->
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <!-- 中部分，占2/9比例 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"

        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <!-- 左侧的空白间隔 -->
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- 左侧的 CardView 包裹的垂直布局 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 上方空白间隔 -->

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">

                <!-- 左侧的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- 上面的文字 -->

                    <!-- 空白间隔，用于距离底部上面一点点距离 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="#FF5722"

                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/my_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="#FF5722"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <!-- 下面的文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户余额"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- 下方空白间隔 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />
        </LinearLayout>

        <!-- 右侧的空白间隔 -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <!-- 右侧的 CardView 包裹的垂直布局 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="153dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="20dp">

                <!-- 左侧的内容布局 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- 上面的文字 -->

                    <!-- 空白间隔，用于距离底部上面一点点距离 -->
                    <TextView
                        android:id="@+id/my_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <!-- 下面的文字 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- 下方空白间隔 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 下部分，占4/9比例 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"

        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />
        <!-- 第一个 CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/my_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FDFDFD"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <!-- 内容布局 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/order" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="我的订单"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 保持间距不变的方式：通过设置上边距实现平移 -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FDFDFD"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <!-- 内容布局 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/address" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="收货地址"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 保持间距不变的方式：通过设置上边距实现平移 -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/my_car"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FDFDFD"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <!-- 内容布局 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/car" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="我的购物车"
                    android:textStyle=""
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 保持间距不变的方式：通过设置上边距实现平移 -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/my_problem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FDFDFD"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <!-- 内容布局 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/problem" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="问题反馈"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 保持间距不变的方式：通过设置上边距实现平移 -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 底部，占1/9比例 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <!-- 底部按钮布局 -->
    </LinearLayout>


</LinearLayout>
